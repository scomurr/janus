# Janus Trading System Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1500

# Trading Configuration
TRADING_MODE=paper  # paper | live
MAX_POSITION_SIZE=20  # percentage
REQUIRE_STOP_LOSS=true
DEFAULT_CASH=10000

# Data Sources
PRIMARY_DATA_SOURCE=yahoo
FALLBACK_DATA_SOURCE=stooq
PORTFOLIO_DATA_SOURCE=csv  # csv | database | api

# File Paths
PORTFOLIO_CSV_PATH=./data/portfolio.csv
TRADE_LOG_CSV_PATH=./data/trade_log.csv
BACKUP_DIRECTORY=./data/backups

# Database Configuration (if using database)
DATABASE_URL=postgresql://user:password@localhost:5432/janus_trading
DATABASE_POOL_SIZE=10

# API Configuration
API_PORT=3000
API_RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
API_RATE_LIMIT_MAX=100

# Notification Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Janus Trading <your-email@gmail.com>
EMAIL_TO=your-notifications@gmail.com

WEBHOOK_URL=https://your-webhook-url.com/notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-slack-webhook

# Security
JWT_SECRET=your-jwt-secret-key-here
API_KEY=your-api-key-for-authentication

# Logging
LOG_LEVEL=info  # error | warn | info | debug
LOG_FILE=./logs/janus.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_MAX_FILES=5

# External Services
BROKER_API_KEY=your-broker-api-key
BROKER_API_SECRET=your-broker-api-secret
BROKER_ENVIRONMENT=sandbox  # sandbox | live

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000  # 24 hours in ms
BACKUP_RETENTION_DAYS=30

# Development/Debug
DEBUG_MODE=false
MOCK_TRADES=true
VERBOSE_LOGGING=false

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Timezone
TZ=America/New_York